<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.ac.fhcampus.simple_manager.Controllers.AddNewEntryController">

    <children>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="40.0"
              prefHeight="420.0" prefWidth="600.0" spacing="18.0">

            <children>


                <Label prefHeight="50.0"
                       prefWidth="600.0"
                       alignment="CENTER"
                       styleClass="title-label"
                       stylesheets="@css/Main_style.css"
                       text="Add New Entry" />

                <Separator prefHeight="5.0" prefWidth="600.0" />


                <VBox prefWidth="600.0" spacing="8.0">
                    <children>
                        <Label prefWidth="600.0"
                               styleClass="section-label"
                               stylesheets="@css/Main_style.css"
                               text="Title" />
                        <TextField fx:id="titleField"
                                   prefHeight="40.0"
                                   prefWidth="600.0"
                                   promptText="Enter title..." />
                    </children>
                </VBox>


                <VBox prefWidth="600.0" spacing="8.0">
                    <children>
                        <Label prefWidth="600.0"
                               styleClass="section-label"
                               stylesheets="@css/Main_style.css"
                               text="Author" />
                        <TextField fx:id="authorField"
                                   prefHeight="40.0"
                                   prefWidth="600.0"
                                   promptText="Enter author..." />
                    </children>
                </VBox>


                <VBox prefWidth="600.0" spacing="8.0">
                    <children>
                        <Label prefWidth="600.0"
                               styleClass="section-label"
                               stylesheets="@css/Main_style.css"
                               text="Type" />
                        <ComboBox fx:id="typeComboBox"
                                  prefHeight="40.0"
                                  prefWidth="600.0" />
                    </children>
                </VBox>


                <HBox alignment="CENTER"
                      prefHeight="100.0"
                      prefWidth="600.0"
                      spacing="30.0">

                    <children>
                        <Button fx:id="backButton"
                                text="Back"
                                prefWidth="280.0"
                                prefHeight="45.0"
                                onAction="#handleBack" />

                        <Button fx:id="saveButton"
                                text="Save Entry"
                                prefWidth="280.0"
                                prefHeight="45.0"
                                onAction="#handleSave" />
                    </children>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
